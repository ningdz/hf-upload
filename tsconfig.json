{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "outDir": "lib",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "declaration": true,
    "declarationDir": "declaration"
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": ["./src"]
}
